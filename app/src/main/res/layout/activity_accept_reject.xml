<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AcceptRejectActivity">


    <TextView
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:id="@+id/date"
        android:layout_below="@+id/cname"
        android:layout_alignLeft="@+id/cname"
        android:layout_alignStart="@+id/cname" />

    <TextView
        android:text="Customer Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="39dp"
        android:id="@+id/cname"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/alert_light_frame"
        android:id="@+id/image"
        android:layout_below="@+id/description"
        android:layout_alignLeft="@+id/description"
        android:layout_alignStart="@+id/description"
        android:layout_marginTop="58dp" />

    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/date"
        android:layout_alignLeft="@+id/date"
        android:layout_alignStart="@+id/date" />

    <Button
        android:text="Reject "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rejectBtn"
        android:layout_below="@+id/image"
        android:layout_toRightOf="@+id/cname"
        android:layout_toEndOf="@+id/cname"
        android:layout_marginTop="62dp" />

    <Button
        android:text="Accept "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/acceptBtn"
        android:layout_alignBaseline="@+id/rejectBtn"
        android:layout_alignBottom="@+id/rejectBtn"
        android:layout_alignLeft="@+id/image"
        android:layout_alignStart="@+id/image" />

    <TextView
        android:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/cname"
        android:layout_alignStart="@+id/cname" />

</RelativeLayout>


